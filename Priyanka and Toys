#include <stdio.h>
#include <stdlib.h>
int compare(const void *a, const void *b) {
    int x = *(int*)a;
    int y = *(int*)b;
    return x - y;
}

int toys(int* w, int n) {
    qsort(w, n, sizeof(int), compare);

    int containers = 0;
    int i = 0;

    while (i < n) {
        containers++;
        int start = w[i];
        while (i < n && w[i] <= start + 4) {
            i++;
        }
    }

    return containers;
}

int main() {
    int n;
    scanf("%d", &n);

    int* w = (int*)malloc(n * sizeof(int));
    for (int i = 0; i < n; i++) {
        scanf("%d", &w[i]);
    }

    int result = toys(w, n);
    printf("%d\n", result);

    free(w);
    return 0;
}
